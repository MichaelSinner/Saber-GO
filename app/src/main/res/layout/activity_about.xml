<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background04"
    tools:context="com.uan.michaelsinner.sabergo.Activities.About">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimarySG"

            app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <Button
            android:id="@+id/btnStart"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.69"
            android:background="@color/colorPrimarySG"
            android:gravity="center_vertical"
            android:text="@string/strTitulo"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="70dp"
            tools:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versión 1.6.1"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/tv_licence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LICENCIA GRATUITA - SIN PUBLICIDAD"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_michi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desarrollado por: Michael A. Peñaloza"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnPageMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Página Principal de Saber Go" />

        <Button
            android:id="@+id/btnPageMarc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marcador QR para Meteoritos" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
