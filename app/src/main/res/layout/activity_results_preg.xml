<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background05"
    android:layout_height="match_parent"
    tools:context="com.uan.michaelsinner.sabergo.Activities.ResultsPreg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultados"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <ImageButton
            android:id="@+id/imgResultPreg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_victory" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRes01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Número de respuestas correctas"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvResRightAnsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  1"
                android:textAlignment="textEnd"
                android:textColor="#19e722"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRes02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Respuesta Correcta"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvResWrongAnsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A"
                android:textAlignment="textEnd"
                android:textColor="#ff0000"
                android:textSize="16dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimarySG" />

        <TextView
            android:id="@+id/tvRecompensas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recompensas"
            android:textColor="#deab2c"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRes03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Experiencia obtenida"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvResExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textAlignment="textEnd"
                android:textColor="#9d00ff"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRes04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Número de Fragmentos"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvResFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textAlignment="textEnd"
                android:textColor="#fa1414"
                android:textSize="18dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btnVolverMenuPD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/btn_opciones"
            android:text="Continuar" />


    </LinearLayout>

</ScrollView>