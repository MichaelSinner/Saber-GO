<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativePD"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimarySG"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPregunta_PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="Pregunta " />

    <TextView
        android:id="@+id/tvIDQuest_PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvPregunta_PD"

        android:layout_marginEnd="35dp"
        android:text="MT00023"
        android:textColor="#fa1414"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/tvArea_PD"
        android:layout_width="wrap_content"
        android:text="Área: Matemáticas"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPregunta_PD"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvPuntos_PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="48dp"
        android:text="Puntos"
        android:textColor="#0004ff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvPuntosEXP_PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvIDQuest_PD"
        android:layout_alignTop="@+id/tvPuntosFRG_PD"
        android:text="+2 EXP"
        android:textColor="#00ff00"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/ivPregunta_PD"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvArea_PD"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/tvPuntosFRG_PD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPregunta_PD"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:text="+1 MT"
        android:textColor="#fa1414"
        android:textSize="15dp" />

</RelativeLayout>