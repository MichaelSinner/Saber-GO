<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySG"
    tools:context="com.uan.michaelsinner.sabergo.MainActivity"
    android:clipToPadding="false"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivNube01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStart"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light"
        android:visibility="visible"
        app:srcCompat="@drawable/nube01" />

    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/ivNube00"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:elevation="30dp"

            android:visibility="visible"
            app:srcCompat="@drawable/nube02"
            android:layout_below="@+id/btnStart"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_alignParentBottom="true" />

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.69"
        android:background="@color/colorPrimarySG"
        android:text="@string/strTitulo"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="70dp"
        tools:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="(Pulse aquÃ­ para continuar)"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
