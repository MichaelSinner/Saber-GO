<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uan.michaelsinner.sabergo.Activities.Achievements">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimarySG"

            app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorContinue"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                app:srcCompat="@drawable/log01bn" />

            <TextView
                android:id="@+id/tvLog01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/strLogTit01"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imglog02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:background="@color/colorPrimarySG"

                app:srcCompat="@drawable/log02bn" />

            <TextView
                android:id="@+id/tvLog02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/strLogTit02"
                android:gravity="center"
                android:background="@color/colorPrimarySG"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog03"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.16"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log03bn" />


            <TextView
                android:id="@+id/tvLog03"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:layout_weight="2.31"
                android:background="@color/colorTitle"
                android:gravity="center"
                android:text="@string/strLogTit03"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog04"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log04bn" />


            <TextView
                android:id="@+id/tvLog04"
                android:layout_width="216dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimarySG"
                android:gravity="center"

                android:text="@string/strLogTit04"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog05"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log05bn" />

            <TextView
                android:id="@+id/tvLog05"
                android:layout_width="213dp"
                android:layout_height="match_parent"
                android:layout_weight="1.20"
                android:gravity="center"
                android:text="@string/strLogTit05"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog06"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log06bn" />


            <TextView
                android:id="@+id/tvLog06"
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:layout_weight="0.56"
                android:background="@color/colorPrimarySG"
                android:gravity="center"
                android:text="@string/strLogTit06"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog07"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log07bn" />

            <TextView
                android:id="@+id/tvLog07"
                android:layout_width="213dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/strLogTit07"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imglog08"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log08bn" />

            <TextView
                android:id="@+id/tvLog08"
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimarySG"
                android:gravity="center"
                android:text="@string/strLogTit08"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>
