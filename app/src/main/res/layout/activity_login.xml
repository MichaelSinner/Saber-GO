<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySG"

    tools:context="com.uan.michaelsinner.sabergo.Activities.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:gravity="center"
            android:id="@+id/tvTitleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="@string/strTituloLogin"
            android:textColor="@color/colorTitle"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/tvSub02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etEmail"
            android:layout_alignStart="@+id/tvTitleLogin"
            android:layout_weight="1"
            android:text="Ingresar con correo electrónico :"
            android:textColor="@color/colorTitle"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvSub01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleLogin"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Ingresar a Saber Go"
            android:textColor="@color/colorTitle"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-192dp"
            android:background="#ffffff"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="start"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="209dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPassword"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_shape02"
            android:shadowColor="#575655"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="@string/strBtnIniciarSesion"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="45dp" />


        <TextView
            android:id="@+id/tvSub03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnIniciarSesion"
            android:layout_below="@+id/space01"
            android:text="Ingresar con cuenta Gmail :"
            android:textColor="@color/colorTitle"
            android:textSize="16dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btnSignInGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvSub03"
            android:layout_centerHorizontal="true"
            android:textAlignment="center">

        </com.google.android.gms.common.SignInButton>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/button_fbLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignInGoogle"
            android:layout_centerHorizontal="true"
            android:textSize="22dp" />


        <Space
            android:id="@+id/space"
            android:layout_below="@id/button_fbLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <Space
            android:id="@+id/space01"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@id/btnIniciarSesion" />

        <Button
            android:id="@+id/btnToRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSub04"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_shape02"
            android:shadowColor="#575655"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:text="@string/strBtnRegistrarse"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="45dp" />


        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnToRegister"
            android:layout_centerHorizontal="true"
            android:text="@string/strYear"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvSub04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/btnIniciarSesion"
            android:layout_below="@+id/space"
            android:text="No te has registrado? "
            android:textColor="@color/colorTitle"
            android:textSize="16dp" />


    </RelativeLayout>




</ScrollView>
