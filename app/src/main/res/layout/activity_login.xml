<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySG"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelsinner.sabergo.Activities.Login">

    <TextView
        android:text="@string/strTitulo"
        android:textColor="@color/colorTitle"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/tvTitleLogin" />


    <Button
        android:text="@string/strSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrarse"
        android:layout_marginBottom="120dp"
        android:layout_below="@+id/tvTitleLogin"
        android:layout_alignStart="@+id/tvTitleLogin"
        android:layout_alignEnd="@+id/tvTitleLogin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvO"
        android:text="Ã“"
        android:layout_below="@+id/tvTitleLogin"
        android:layout_marginTop="58dp"
        android:layout_above="@+id/button_fbLogin"
        android:layout_alignEnd="@+id/button_fbLogin"
        android:layout_alignStart="@+id/button_fbLogin" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/button_fbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
