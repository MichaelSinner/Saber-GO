<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background05"
    android:layout_height="wrap_content"
    tools:context="com.uan.michaelsinner.sabergo.Activities.ResultsExam">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleRPD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <ImageButton
            android:id="@+id/imgResultExam"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <ProgressBar
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/pbRightWrong"
            android:progress="66"
            android:progressBackgroundTint="#FF0000"
            android:layout_gravity="center_horizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linearrepcorr"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes01"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Número de respuestas correctas" />

            <TextView
                android:id="@+id/tvResRightAnsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  33"
                android:textAlignment="textEnd"
                android:textColor="#19e722"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes02"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Número de respuestas incorrectas" />

            <TextView
                android:id="@+id/tvResWrongAnsw"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ff0000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  12" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes03"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Preguntas de Matemáticas correctas" />

            <TextView
                android:id="@+id/tvResMT"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ff6f00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes04"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Preguntas de Lectura Crítica correctas" />

            <TextView
                android:id="@+id/tvResLC"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ff6f00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes05"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Preguntas de Ciecias Sociales correctas" />

            <TextView
                android:id="@+id/tvResCS"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ff6f00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10" />
        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes06"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Preguntas de Ciencias Naturales correctas" />

            <TextView
                android:id="@+id/tvResCN"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ff6f00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes07"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Preguntas de Inglés correctas" />

            <TextView
                android:id="@+id/tvResIN"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ff6f00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes08"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Tiempo del examen diagnóstico" />

            <TextView
                android:id="@+id/tvResTime"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="33'15''" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimarySG"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRecompensasPD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recompensas"
            android:textColor="#deab2c"
            android:textSize="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes09"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fragmentos de LC" />

            <TextView
                android:id="@+id/tvResFragLC"
                android:textSize="18dp"
                android:textAlignment="textEnd"
                android:textColor="#9d00ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes10"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fragmentos de MT" />

            <TextView
                android:id="@+id/tvResFragMT"
                android:textSize="18dp"
                android:textAlignment="textEnd"
                android:textColor="#fa1414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes11"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fragmentos de CS" />

            <TextView
                android:id="@+id/tvResFragCS"
                android:textSize="18dp"
                android:textAlignment="textEnd"
                android:textColor="#ff6a00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes12"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fragmentos de CN" />

            <TextView
                android:id="@+id/tvResFragCN"
                android:textSize="18dp"
                android:textAlignment="textEnd"
                android:textColor="#0b8300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes13"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fragmentos de IN" />

            <TextView
                android:id="@+id/tvResFragIN"
                android:textSize="18dp"
                android:textAlignment="textEnd"
                android:textColor="#5ccbff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes14"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  SaberMoney" />

            <TextView
                android:id="@+id/tvResMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+16500"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF00"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRes15"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Puntos de experiencia" />

            <TextView
                android:id="@+id/tvResExp"
                android:textSize="18dp"
                android:textAlignment="textEnd"
                android:textColor="#00ff00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+50" />
        </LinearLayout>


        <Button
            android:id="@+id/btnVolverMenu"
            android:textColor="@color/colorTitle"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/btn_init"
            android:text="Continuar" />


    </LinearLayout>

</ScrollView>
