<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.uan.michaelsinner.sabergo.Fragments.Tut_PregDiarias">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvSubTitleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Ingresar a Examen Diagnóstico"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvSubTitleTwo"
            android:layout_below="@+id/gif04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Responder y mover imágen pregunta"
            android:textSize="20dp" />

          <ImageView
            android:id="@+id/gif04"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tvSubTitleOne"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:srcCompat="@raw/gif04" />

        <ImageView

            android:id="@+id/gif05"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@id/tvSubTitleTwo"
            android:layout_width="match_parent"
            android:layout_height="200dp" />




    </RelativeLayout>


</ScrollView>
