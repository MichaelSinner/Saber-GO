<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySG"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelsinner.sabergo.Activities.LoginEmail">
    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="176dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/btnLogIn"
        android:text="@string/strBtnIniciarSesion"
        android:layout_above="@+id/btnSingIn"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@+id/btnSingIn" />
    <Button
        android:layout_width="366dp"
        android:layout_height="55dp"
        android:id="@+id/btnSingIn"
        android:text="@string/strBtnRegistrarse"
        tools:layout_editor_absoluteY="228dp"
        android:layout_marginLeft="9dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="86dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="71dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="349dp"
        android:layout_height="53dp"
        android:layout_above="@+id/btnSingIn"
        android:layout_alignStart="@+id/btnSingIn"
        android:layout_marginBottom="83dp"

        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="102dp" />

</RelativeLayout>
